# Payman Chat Widget Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
PAYMAN_API_BASE_URL=https://your-api.domain.com
PAYMAN_AUTH_TOKEN=your-auth-token-here
PAYMAN_API_KEY=your-api-key-here

# Workflow Configuration
PAYMAN_WORKFLOW_NAME=your-workflow-name
PAYMAN_WORKFLOW_VERSION=1
PAYMAN_STAGE=DEV

# Session Configuration
PAYMAN_SESSION_ID=your-session-id
PAYMAN_SESSION_NAME=your-session-name

# Customer Information (Optional - for MCP headers)
PAYMAN_CUSTOMER_EMAIL=customer@example.com
PAYMAN_CUSTOMER_ID=12345
PAYMAN_PROVIDER_TOKEN=your-provider-token

# Timezone
PAYMAN_CLIENT_TIMEZONE=Asia/Dubai
